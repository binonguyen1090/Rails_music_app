<br>
<div class="container">
<h1 style="color:green">Albums of: <%= @band.name %></h1>
<br>
<button type="button" class="btn btn-success" ><a href="<%= new_band_album_url(@band.id) %>">Add Album</a></button>

<a href="<%= users_url %>">
<button type="button" class="btn btn-secondary" ><%= octicon "arrow-left" %></button>
</a>
</div>
<br>

<br>
<div class="container" > 
<table class="table table-striped table-bordered table-dark">

  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Album Title</th>
      <th scope="col">Year</th>
      <th scope="col">Edit</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <% @band.albums.each do |album| %>
  <tbody>
    <tr>
      <th scope="row"><%= album.id %></th>
      <td>
          <a href="<%= album_url(album) %>">
      <button  type="button" class="btn btn-warning"><%= album.title %></button>
      </a>
    

      </td>
      <td><%= album.year %></td>


      <td>
      <a href="<%= edit_album_url(album.id) %>">
      <button type="button" class="btn btn-outline-info" ><%= octicon "tools", :height => 25 %></button>
      </a>
      </td>

      <td>
      <form action="<%= album_url(album.id) %>" method="post">
      <input type="hidden" name="_method" value="DELETE">
       <button type="summit" class="btn btn-outline-danger"><%= octicon "trashcan", :height => 25 %></button>
      </form>

      </td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>