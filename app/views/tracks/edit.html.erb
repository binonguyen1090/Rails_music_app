<br><br>
<center>
<h1>Edit Track</h1>
<br><br>
<form action="<%= track_url(@track) %>" method="post">
<input type="hidden" name="_method" value="PATCH">
<input type="hidden" name="track[album_id]" value="<%= @track.album_id %>">


<div class="form-group">
  <label ><h3>Track Title</h3><br><br>
    <input type="text" name="track[title]" value="<%= @track.title %>">
  </label>
</div>


<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<button type="submit" type="button" class="btn btn-success" >Update Track</button>
<a href="<%= album_url(@track.album_id) %>">
<button type="button" class="btn btn-warning" >Cancel</button>
</a>
</form>
</center>